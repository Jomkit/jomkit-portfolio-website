---
import Layout from "./Layout.astro";

const {frontmatter} = Astro.props;
---
<Layout title={frontmatter.title}>
    <div class="flex justify-start w-3/4">
        <a href="/posts" class="px-5 py-3 mt-2 text-blue-600 hover:underline hover:shadow-lg hover:bg-green-500 hover:text-white transition ease-in delay-75 font-bold rounded-lg">Back</a>
    </div>
    <div class="flex flex-col items-center mt-6">
        <p class="text-slate-600">{frontmatter.pubDate}</p>
    
        <h1>{frontmatter.title}</h1>
    </div>

    <div class="bg-slate-200 p-8 rounded w-3/4">
        <slot />
    </div>
</Layout>